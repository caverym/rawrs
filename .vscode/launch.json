    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rawrs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rawrs",
                    "--package=rawrs"
                ],
                "filter": {
                    "name": "rawrs",
                    "kind": "bin"
                }
            },
            "args": [
                "-c",
                "bcdfghjklmnpqrstvwxyzi",
                "-v",
                "aeou",
                "-o",
                "(v,20)cv",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rawrs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rawrs",
                    "--package=rawrs"
                ],
                "filter": {
                    "name": "rawrs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}